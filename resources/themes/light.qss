/* Light Theme - PRO-Ka-Po Kaizen Freak */

/* === Main Window === */
QMainWindow {
    background-color: #f5f5f5;
}

/* === General Widget Styles === */
QWidget {
    background-color: #ffffff;
    color: #212121;
    font-family: 'Segoe UI', 'Roboto', Arial, sans-serif;
    font-size: 10pt;
}

/* === Buttons === */
QPushButton {
    background-color: #2196F3;
    color: white;
    border: none;
    padding: 8px 16px;
    border-radius: 4px;
    min-width: 80px;
    font-weight: 500;
}

QPushButton:hover {
    background-color: #1976D2;
}

QPushButton:pressed {
    background-color: #0D47A1;
}

QPushButton:disabled {
    background-color: #BDBDBD;
    color: #757575;
}

QPushButton:focus {
    outline: none;
    border: 2px solid #64B5F6;
}

/* Navigation Buttons */
QPushButton#navButton {
    background-color: #EEEEEE;
    color: #212121;
    border: none;
    border-radius: 0;
    padding: 10px 20px;
    font-weight: 700;
    font-size: 11pt;
}

QPushButton#navButton:hover {
    background-color: #E3F2FD;
}

QPushButton#navButton:checked {
    background-color: #FF9800;
    color: white;
    border-bottom: 3px solid #F57C00;
}

/* Navigation Toggle Button (expand/collapse second row) */
QPushButton#navToggleButton {
    background-color: #BDBDBD;
    color: #212121;
    border: none;
    border-radius: 0;
    padding: 10px;
    font-weight: bold;
    font-size: 14pt;
}

QPushButton#navToggleButton:hover {
    background-color: #9E9E9E;
}

QPushButton#navToggleButton:pressed {
    background-color: #757575;
}

/* Theme Toggle Button */
QPushButton#themeToggleButton {
    background-color: #FFF9C4;
    color: #212121;
    border: 2px solid #FBC02D;
    border-radius: 20px;
    font-size: 18pt;
    font-weight: bold;
}

QPushButton#themeToggleButton:hover {
    background-color: #FFF176;
    border-color: #F9A825;
}

QPushButton#themeToggleButton:pressed {
    background-color: #FFEB3B;
}

/* Quick Input Buttons */
QPushButton#quickAddButton,
QPushButton#quickNoteButton {
    background-color: #4CAF50;
    color: white;
    border-radius: 4px;
    font-size: 16pt;
    font-weight: bold;
}

QPushButton#quickAddButton:hover,
QPushButton#quickNoteButton:hover {
    background-color: #45a049;
}

QPushButton#quickNoteButton {
    background-color: #FF9800;
}

QPushButton#quickNoteButton:hover {
    background-color: #F57C00;
}

/* === Line Edits === */
QLineEdit {
    background-color: white;
    border: 1px solid #BDBDBD;
    border-radius: 4px;
    padding: 8px;
    color: #212121;
    selection-background-color: #2196F3;
}

QLineEdit:focus {
    border: 2px solid #2196F3;
    padding: 7px;
}

QLineEdit:disabled {
    background-color: #F5F5F5;
    color: #9E9E9E;
}

/* === Text Edits === */
QTextEdit, QPlainTextEdit {
    background-color: white;
    border: 1px solid #BDBDBD;
    border-radius: 4px;
    padding: 8px;
    color: #212121;
}

QTextEdit:focus, QPlainTextEdit:focus {
    border: 2px solid #2196F3;
}

/* === Tables === */
QTableView {
    background-color: white;
    alternate-background-color: #FAFAFA;
    gridline-color: #E0E0E0;
    border: 1px solid #BDBDBD;
    border-radius: 4px;
    selection-background-color: #2196F3;
    selection-color: white;
}

QTableView::item {
    padding: 8px;
}

QTableView::item:selected {
    background-color: #2196F3;
    color: white;
}

QTableView::item:hover {
    background-color: #E3F2FD;
}

QHeaderView::section {
    background-color: #EEEEEE;
    color: #212121;
    padding: 10px;
    border: none;
    border-bottom: 2px solid #2196F3;
    border-right: 1px solid #E0E0E0;
    font-weight: bold;
}

QHeaderView::section:hover {
    background-color: #E0E0E0;
}

/* === Menu Bar === */
QMenuBar {
    background-color: #ffffff;
    border-bottom: 1px solid #E0E0E0;
    padding: 4px;
}

QMenuBar::item {
    padding: 6px 12px;
    background-color: transparent;
    border-radius: 4px;
}

QMenuBar::item:selected {
    background-color: #E3F2FD;
}

QMenuBar::item:pressed {
    background-color: #BBDEFB;
}

/* === Menu === */
QMenu {
    background-color: white;
    border: 1px solid #BDBDBD;
    border-radius: 6px;
    padding: 6px;
}

QMenu::item {
    padding: 10px 30px 10px 10px;
    border-radius: 4px;
    color: #212121;
}

QMenu::item:selected {
    background-color: #E3F2FD;
    color: #2196F3;
}

QMenu::separator {
    height: 1px;
    background-color: #E0E0E0;
    margin: 6px 10px;
}

/* Submenu indicator */
QMenu::right-arrow {
    width: 12px;
    height: 12px;
    margin-right: 5px;
}

/* === Toolbar === */
QToolBar {
    background-color: #FAFAFA;
    border-bottom: 1px solid #E0E0E0;
    spacing: 8px;
    padding: 8px;
}

QToolButton {
    background-color: transparent;
    border: none;
    padding: 6px;
    border-radius: 4px;
}

QToolButton:hover {
    background-color: #E3F2FD;
}

QToolButton:pressed {
    background-color: #BBDEFB;
}

/* === Status Bar === */
QStatusBar {
    background-color: #F5F5F5;
    border-top: 1px solid #E0E0E0;
    color: #616161;
}

/* === Combo Box === */
QComboBox {
    background-color: white;
    border: 1px solid #BDBDBD;
    border-radius: 4px;
    padding: 6px 12px;
    min-width: 100px;
}

QComboBox:hover {
    border: 1px solid #2196F3;
}

QComboBox:focus {
    border: 2px solid #2196F3;
}

QComboBox::drop-down {
    border: none;
    width: 20px;
}

QComboBox QAbstractItemView {
    background-color: white;
    border: 1px solid #BDBDBD;
    selection-background-color: #2196F3;
}

/* === Scroll Bar === */
QScrollBar:vertical {
    background-color: #F5F5F5;
    width: 12px;
    margin: 0;
}

QScrollBar::handle:vertical {
    background-color: #BDBDBD;
    min-height: 20px;
    border-radius: 6px;
    margin: 2px;
}

QScrollBar::handle:vertical:hover {
    background-color: #9E9E9E;
}

QScrollBar::add-line:vertical, QScrollBar::sub-line:vertical {
    height: 0px;
}

QScrollBar:horizontal {
    background-color: #F5F5F5;
    height: 12px;
    margin: 0;
}

QScrollBar::handle:horizontal {
    background-color: #BDBDBD;
    min-width: 20px;
    border-radius: 6px;
    margin: 2px;
}

QScrollBar::handle:horizontal:hover {
    background-color: #9E9E9E;
}

QScrollBar::add-line:horizontal, QScrollBar::sub-line:horizontal {
    width: 0px;
}

/* === Tabs === */
QTabWidget::pane {
    border: 1px solid #BDBDBD;
    border-radius: 4px;
    background-color: white;
}

QTabBar::tab {
    background-color: #EEEEEE;
    border: 1px solid #BDBDBD;
    padding: 8px 16px;
    margin-right: 2px;
}

QTabBar::tab:selected {
    background-color: white;
    border-bottom-color: white;
}

QTabBar::tab:hover {
    background-color: #E3F2FD;
}

/* === Group Box === */
QGroupBox {
    border: 1px solid #BDBDBD;
    border-radius: 4px;
    margin-top: 12px;
    padding-top: 12px;
    font-weight: bold;
}

QGroupBox::title {
    subcontrol-origin: margin;
    subcontrol-position: top left;
    padding: 0 8px;
    color: #2196F3;
}

/* === Check Box & Radio Button === */
QCheckBox, QRadioButton {
    spacing: 8px;
}

QCheckBox::indicator, QRadioButton::indicator {
    width: 18px;
    height: 18px;
}

QCheckBox::indicator:unchecked {
    border: 2px solid #BDBDBD;
    background-color: white;
    border-radius: 3px;
}

QCheckBox::indicator:checked {
    border: 2px solid #2196F3;
    background-color: #2196F3;
    border-radius: 3px;
}

/* Big Checkbox for Quick Input */
QCheckBox#bigCheckbox::indicator {
    width: 28px;
    height: 28px;
    border: 3px solid #BDBDBD;
    border-radius: 5px;
}

QCheckBox#bigCheckbox::indicator:checked {
    border: 3px solid #4CAF50;
    background-color: #4CAF50;
}

QCheckBox#bigCheckbox::indicator:hover {
    border-color: #2196F3;
}

QRadioButton::indicator:unchecked {
    border: 2px solid #BDBDBD;
    background-color: white;
    border-radius: 9px;
}

QRadioButton::indicator:checked {
    border: 2px solid #2196F3;
    background-color: #2196F3;
    border-radius: 9px;
}

/* === Progress Bar === */
QProgressBar {
    border: 1px solid #BDBDBD;
    border-radius: 4px;
    text-align: center;
    background-color: #F5F5F5;
}

QProgressBar::chunk {
    background-color: #2196F3;
    border-radius: 3px;
}

/* === Slider === */
QSlider::groove:horizontal {
    height: 6px;
    background-color: #E0E0E0;
    border-radius: 3px;
}

QSlider::handle:horizontal {
    width: 16px;
    height: 16px;
    background-color: #2196F3;
    border-radius: 8px;
    margin: -5px 0;
}

QSlider::handle:horizontal:hover {
    background-color: #1976D2;
}

/* === Settings View Styles === */
QTabWidget::pane {
    border: 1px solid #ddd;
    background-color: #ffffff;
    border-radius: 4px;
}

QTabBar::tab {
    background-color: #f5f5f5;
    color: #2c3e50;
    padding: 10px 20px;
    border: 1px solid #ddd;
    border-bottom: none;
    border-top-left-radius: 4px;
    border-top-right-radius: 4px;
    margin-right: 2px;
}

QTabBar::tab:selected {
    background-color: #ffffff;
    color: #FF9800;
    font-weight: 700;
}

QTabBar::tab:hover {
    background-color: #e8e8e8;
}

QGroupBox {
    font-weight: 600;
    font-size: 12px;
    color: #2c3e50;
    border: 2px solid #ddd;
    border-radius: 6px;
    margin-top: 12px;
    padding-top: 15px;
}

QGroupBox::title {
    subcontrol-origin: margin;
    subcontrol-position: top left;
    padding: 0 10px;
    background-color: #ffffff;
}

QPushButton#saveButton {
    background-color: #4CAF50;
    color: white;
    font-size: 14px;
    font-weight: 700;
    border: none;
    border-radius: 6px;
    padding: 12px;
}

QPushButton#saveButton:hover {
    background-color: #45a049;
}

QPushButton#saveButton:pressed {
    background-color: #3d8b40;
}

/* === Custom Title Bar === */
QWidget#customTitleBar {
    background-color: #2196F3;
    border: none;
}

QLabel#titleBarLabel {
    color: white;
    font-size: 12pt;
    font-weight: bold;
}

QPushButton#titleBarUserButton,
QPushButton#titleBarThemeButton {
    background-color: rgba(255, 255, 255, 0.1);
    color: white;
    border: 1px solid rgba(255, 255, 255, 0.3);
    border-radius: 4px;
    font-size: 16pt;
}

QPushButton#titleBarUserButton:hover,
QPushButton#titleBarThemeButton:hover {
    background-color: rgba(255, 255, 255, 0.2);
    border-color: rgba(255, 255, 255, 0.5);
}

QPushButton#titleBarUserButton:pressed,
QPushButton#titleBarThemeButton:pressed {
    background-color: rgba(255, 255, 255, 0.3);
}

QPushButton#minimizeButton,
QPushButton#maximizeButton {
    background-color: transparent;
    color: white;
    border: none;
    font-size: 14pt;
}

QPushButton#minimizeButton:hover,
QPushButton#maximizeButton:hover {
    background-color: rgba(255, 255, 255, 0.2);
}

QPushButton#closeButton {
    background-color: transparent;
    color: white;
    border: none;
    font-size: 14pt;
}

QPushButton#closeButton:hover {
    background-color: #e81123;
}

QPushButton#closeButton:pressed {
    background-color: #c50e1f;
}
