
/* === Custom Color Scheme Generated by Style Creator === */

/* Main Window */
QMainWindow {
    background-color: #FFFFFF;
    color: #2C3E50;
}

/* Navigation Buttons */
QPushButton#navButton {
    background-color: #F5F5F5;
    color: #2C3E50;
    border: 1px solid #DDD;
    border-radius: 5px;
    padding: 8px 15px;
    font-weight: 700;
}

QPushButton#navButton:hover {
    background-color: #E8E8E8;
}

QPushButton#navButton:checked {
    background-color: #FF9800;
    color: #FFFFFF;
}

/* Add Button */
QPushButton {
    background-color: #4CAF50;
    color: white;
    border-radius: 4px;
    padding: 6px 12px;
}

QPushButton:hover {
    background-color: #45A049;
}

/* Tables */
QTableWidget {
    background-color: #FFFFFF;
    alternate-background-color: #F9F9F9;
    selection-background-color: #E3F2FD;
    gridline-color: #DDD;
}

QHeaderView::section {
    background-color: #F5F5F5;
    color: #2C3E50;
    border: 1px solid #DDD;
    padding: 5px;
}

/* Input Fields */
QLineEdit, QTextEdit {
    background-color: #FFFFFF;
    color: #2C3E50;
    border: 2px solid #DDD;
    border-radius: 4px;
    padding: 4px;
}

QLineEdit:focus, QTextEdit:focus {
    border-color: #FF9800;
}

/* GroupBox */
QGroupBox {
    font-weight: 600;
    color: #2C3E50;
    border: 2px solid #DDD;
    border-radius: 6px;
    margin-top: 12px;
    padding-top: 15px;
}

QGroupBox::title {
    subcontrol-origin: margin;
    subcontrol-position: top left;
    padding: 0 10px;
    background-color: #FFFFFF;
}
